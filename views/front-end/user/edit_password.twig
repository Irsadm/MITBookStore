{% extends 'front-end/app.twig' %}

{% block nav %}
    {% include 'front-end/partials/navuser.twig' %}
{% endblock %}

{% block title %} Setting Account - MIT Book Store {% endblock %}

{% block content %}
    	<section class="content-header">
    		<h1>Setting Account</h1>
      		<ol class="breadcrumb">
        		<li><a href="{{path_for('home')}}"><i class="fa fa-home"></i>Home Page</a></li>
        		<li><a href="{{path_for('user.account')}}">My Account</a></li>
        		<li class="active">Setting Account</li>
      		</ol>
    	</section>
    	<section class="content">
			{% include 'templates/partials/flash.twig'%}
			<div class="row">
				<div class="col-xs-12">
					<div class="box box-primary">
						<div class="box-header">
							<h4><b>Change Password</b></h4>
						</div>
						<form action="{{path_for('user.edit')}}?section=change_password" method="POST">
							<div class="box-body">
								<div class="pull-left col-md-5">
									<div class="form-group {{ errors.old_password ? 'has-error' : ''}}">
										<label for="old_password">Old Password</label>
										<input type="password" name="old_password" id="old_password" class="form-control">
										{% if errors.old_password %}
											<span class="help-block">{{errors.old_password | first}}</span>
										{% endif %}
									</div>
									<div class="form-group {{ errors.new_password ? 'has-error' : ''}}">
										<label for="new_password">New Password</label>
										<input type="password" name="new_password" id="new_password" class="form-control">
										{% if errors.new_password %}
											<span class="help-block">{{errors.new_password | first}}</span>
										{% endif %}
									</div>
									<div class="form-group {{ errors.repeat_password ? 'has-error' : ''}}">
										<label for="repeat_password">New Password</label>
										<input type="password" name="repeat_password" id="repeat_password" class="form-control">
										{% if errors.repeat_password %}
											<span class="help-block">{{errors.repeat_password | first}}</span>
										{% endif %}
									</div>
								</div>
							</div>
							<div class="box-footer">
								<div class="pull-right">
									<button class="btn btn-success">Save</button>
									<a href="{{path_for('user.account')}}">
										<button type="button" class="btn btn-primary">Back</button>
									</a>
								</div>
							</div>
							{{csrf.field | raw}}
						</form>
					</div>
				</div>
			</div>
		</section>
{% endblock %}