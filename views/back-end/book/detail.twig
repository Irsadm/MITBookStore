{% extends 'templates/app.twig' %}
{% block title %} Admin Page - MIT Book Store {% endblock %}

{% block nav %}
	{% include 'templates/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>
				Detail Book
		    </h1>
		    <ol class="breadcrumb">
		        <li><a href="{{ path_for('book.index')}}"><i class="fa fa-book"></i>Book</a></li>
		    </ol>
			{% include 'templates/partials/flash.twig' %}
    	</section>
			<section class="content">
				<div class="box">
            <div class="box-header">
              <h3 class="box-title">
				<a href="{{path_for('book.index')}}" class="btn btn-warning"> Back</a>
					<a href="{{ path_for('book.add.author', {('id'):table.id})}}" class="btn btn-danger">Add Author Book</a>
					<a href="{{ path_for('book.add.category', {('id'):table.id})}}"  class="btn btn-success">Add Category Book</a>
			  </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
				<div class="row">
				  	<div class="col-lg-6">
				<table class="table">
					<tr>
						<th>Title</th>
						<td>{{table.title}}</td>
					</tr>
					<tr>
						<th>ISBN</th>
						<td>{{table.isbn}}</td>
					</tr>
					<tr>
						<th>Author</th>
						<td>
							{% for item in author %}
							- {{item}}<br>
							{% endfor %}
						</td>
					</tr>
					<tr>
						<th>Category</th>
						<td>
							{% for items in category %}
							- {{items}}<br>
							{% endfor %}
						</td>
					</tr>
					<tr>
						<th>Publisher</th>
						<td>{{table.name_publisher}}</td>
					</tr>
					<tr>
						<th>Publisher Year</th>
						<td>{{table.publish_year}}</td>
					</tr>
					<tr>
						<th>Price</th>
						<td>{{table.price}}</td>
					</tr>
					<tr>
						<th>Stock</th>
						<td>{{table.stock}}</td>
					</tr>
				</table>
				</div>
				<div class="col-lg-6 text-center">
					<h3>Cover</h3><br>
					<img src="{{base_url()}}/assets/images/{{table.images}}"  width="200px" height="250px"><br>
					<a href="{{path_for('book.change', {('id'):table.id})}}" class="btn btn-info btn-sm" title="Change Images">Change Image</a>
				</div>
			</div>

			</div>
			</div>
				<div class="box">
            <!-- /.box-header -->
            <div class="box-body">

              <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th>Synopsis</th>
						<th>Description</th>
					</tr>
                </thead>
                <tbody>
	                <tr>
						<td>{{table.synopsis}}</td>
						<td>{{table.description}}</td>
	                </tr>
				</tbody>
				</table>
            </div>
		</div>
            <!-- /.box-body -->
          </div>
			</section>
    </div>
{% endblock %}
